<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Image results</title>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <link rel="stylesheet" href="/main.css">
  </head>
  
  <body>
    <div class="text-center">    
      <h2>Results for <span style="color:green"><%= searchTerm %></span><br><br></h2>
      
      <% searchResults.forEach(function(item) { %>
          <div class="result-container">
            <h4 class="text-center"> <%= item.title %> </h4>
            <img class="result-image" alt="image result" src="<%= item.img %>">   
            <a href="<%= item.source %>" target="_blank"><h4 class="text-center link-styles">Source</h4></a>   
          </div> 
      <% }) %>
    </div>
  </body>
  
</html>